<!-- Definición del tipo de documento y el idioma -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Configuración del juego de caracteres y la escala del viewport -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Título de la página -->
    <title>Formulario de registro</title>
    <!-- Enlace a Bootstrap CSS desde un CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Estilos adicionales para la página -->
    <style>
        body {
            padding: 20px;
        }
        .form-container {
            max-width: 400px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <!-- Barra de navegación usando Bootstrap -->
    <nav class="navbar navbar-expand-sm bg-light navbar-light">
        <div class="container-fluid">
            <!-- Logo de la página en la barra de navegación -->
            <img src="imagenes/si.svg" alt="Logo SEÑA" style="width: 50px; height: 50px; margin-right: 10px;">
            <!-- Lista de enlaces en la barra de navegación -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" href="/">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="login">Ingresar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="register">Registrarme</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Disabled</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Sección para mostrar mensajes de alerta si existen -->
    <% if (typeof rowLength !== 'undefined' && rowLength) { %>
      <div class="alert alert-warning alert-dismissible" role="alert">
        Usuario registrado. El número de registros es: <%= rowLength %>
        <!-- Botón para cerrar la alerta -->
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% }  %>

    <% if (typeof welcomeMessage !== 'undefined') { %>
      <!-- Sección para mostrar mensajes de bienvenida con un enlace al formulario de inicio de sesión -->
      <div class="alert alert-success alert-dismissible" role="alert">
        <%= welcomeMessage %>
        <!-- Enlace al formulario de inicio de sesión -->
        <a href="login" class="btn btn-success btn-sm mt-3">Ir a Login</a>
        <!-- Botón para cerrar la alerta -->
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- Contenedor principal del formulario de registro -->
    <div class="container form-container">
        <h1 class="mt-4 mb-4">Registro de usuario</h1>
        <!-- Formulario de registro con campos para la cédula, nombre, apellido, correo y contraseña -->
        <form action="/validar" method="post">
            <div class="mb-3">
                <label for="ced" class="form-label">Cédula</label>
                <input type="number" class="form-control" id="ced" name="ced" required>
            </div>
            <div class="mb-3">
                <label for="nom" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="nom" name="nom" required>
            </div>
            <div class="mb-3">
                <label for="apell" class="form-label">Apellido</label>
                <input type="text" class="form-control" id="apell" name="apell" required>
            </div>
            <div class="mb-3">
                <label for="correo" class="form-label">Correo</label>
                <input type="email" class="form-control" id="correo" name="correo" required>
            </div>
            <div class="mb-3">
                <label for="pass" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="pass" name="pass" required>
            </div>
            <!-- Botón para enviar el formulario de registro -->
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>

    <!-- Scripts de Bootstrap (opcional) desde un CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
